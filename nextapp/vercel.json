{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "functions": {
    "api/predict.py": {
      "runtime": "python3.12",
      "maxDuration": 60
    },
    "api/status.py": {
      "runtime": "python3.12",
      "maxDuration": 10
    },
    "api/metrics.py": {
      "runtime": "python3.12",
      "maxDuration": 10
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin",  "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,POST,OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type" }
      ]
    }
  ]
}
